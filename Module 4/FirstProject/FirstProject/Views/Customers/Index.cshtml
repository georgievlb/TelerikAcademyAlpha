@model IEnumerable<FirstProject.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers:</h2>
@if (!Model.Any())
{
    <p>There are no customers yet.</p>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers:</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    @*<td>@customer.MembershipType.DiscountRate%</td>  //Need to load customers and membership type together - this is called Eager Loading*@
                    @* Razor view engine is smart enough to know that the % above is plain text while the .DiscountRate is a C# property*@
                </tr>
            }
        </tbody>
    </table>
}