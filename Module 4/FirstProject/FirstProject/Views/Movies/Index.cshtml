@model IEnumerable<FirstProject.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies:</h2>

@if (!Model.Any())
{
    <p>There are no movies yet.</p>
}

else
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table>
}


